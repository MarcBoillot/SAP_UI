<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.table"
        id="UpdateItemsFragment">
    <Dialog id="AddItemToOrder"
            contentWidth="1000px"
            title="ADD A ITEM">
        <HBox>
            <Label text="Select an ItemName"/>
            <Select
                    id="selectedItem"
                    width="500px"
                    forceSelection="false"
                    selectedKey="{newItemModel>/ItemCode}"
                    items="{
						path: 'itemsModel>/',
						sorter: { path: 'ItemName' }
					}"
            >
                <core:Item key="{itemsModel>ItemCode}" text="{itemsModel>ItemName}"/>
            </Select>
        </HBox>

        <Label text="Entrer une QuantitÃ©"/>
        <Input required="true" value="{newItemModel>/Quantity}" placeholder="Exemple : 45 "/>
        <buttons>
            <Button text="CANCEL" press="onCancelAddItem"/>
            <Button text="PATCH_ORDER" press="onAddItemInOrder"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>