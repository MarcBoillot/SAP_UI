<mvc:View controllerName="wwl.controller.Master"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.f"
          xmlns="sap.m"
       >

    <f:DynamicPage>
        <f:header>
            <f:DynamicPageHeader pinnable="false">
                <FlexBox alignItems="Center" justifyContent="SpaceBetween">
                    <Title text="MFA-Astic" titleStyle="H2" class="sapUiSmallMarginBegin"/>
                    <Image src="./img/seidor-logo1.png" height="42px"/>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <VBox  alignItems="Center" justifyContent="Center" class="customMarginTopAccueil">
                <HBox alignItems="Center" justifyContent="Center">
                    <GenericTile class="customMarginCardAccueil tileLayout buttonMenu" header="Reception"
                                 subheader="Reception" press="onPressReceptionChoicePage" >
                        <TileContent />
                    </GenericTile>
                    <GenericTile class="customMarginCardAccueil tileLayout buttonMenu" header="Preparation"
                                 subheader="Preparation" press="onPressPreparationOrderViewPage" >
                        <TileContent />
                    </GenericTile>
                </HBox>
                <HBox alignItems="Center" justifyContent="Center">
                    <GenericTile class="customMarginCardAccueil tileLayout buttonMenu" header="Stock"
                                 subheader="Stock" press="onPressManagerStocksSelectItemPage" >
                        <TileContent />
                    </GenericTile>
                    <GenericTile class="customMarginCardAccueil tileLayout buttonMenu" header="Controle"
                                 subheader="Controle" press="onPressControlPreparationListPage" >
                        <TileContent />
                    </GenericTile>
                </HBox>
                <HBox>
                    <Toolbar>
                        <ToolbarSpacer/>
                        <Button type="Emphasized" text="Changer d'utilisateur" press="onPress" />
                    </Toolbar>
                </HBox>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
